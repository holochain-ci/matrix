{
  "name": "ci-matrix",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "nodemon  --watch .env --exec 'yarn dev:svelte'",
    "dev:svelte": "svelte-kit dev --port 7777",
    "build": "rm -rf ./build/ && svelte-kit build",
    "preview": "http-server -p 8888 build",
    "update-forks": "NODE_OPTIONS='--loader ts-node/esm' node ./bin/updateForks.ts",
    "check": "svelte-check --fail-on-warnings --tsconfig ./tsconfig.json",
    "check:watch": "yarn check --watch",
    "check-ts": "tsc --noEmit",
    "lint": "yarn _prettier --write && yarn _eslint --fix && yarn check",
    "lint:ci": "yarn _prettier --check && yarn _eslint && yarn check",
    "_prettier": "prettier --ignore-path .gitignore --plugin-search-dir=. .",
    "_eslint": "eslint --max-warnings 0 --ignore-path .gitignore .",
    "deploy": "touch build/.nojekyll && gh-pages --dotfiles --dist build",
    "sort": "sort-package-json"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "dayjs": "^1.10.6",
    "lodash": "^4.17.21",
    "octokit": "^1.1.0",
    "shelljs": "^0.8.4",
    "svelte-table": "^0.1.17",
    "ts-node": "9.1.1"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^1.0.0-next.13",
    "@sveltejs/kit": "v1.0.0-next.118",
    "@types/bluebird": "^3.5.36",
    "@types/node": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "bluebird": "^3.7.2",
    "dotenv": "^10.0.0",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "faker": "^5.5.3",
    "gh-pages": "^3.2.3",
    "http-server": "^0.12.3",
    "nodemon": "^2.0.12",
    "prettier": "~2.3.2",
    "prettier-plugin-svelte": "^2.3.1",
    "sort-package-json": "^1.50.0",
    "svelte": "^3.40.0",
    "svelte-check": "^2.2.3",
    "svelte-preprocess": "^4.7.4",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  }
}
